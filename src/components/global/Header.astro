---
import { Button, Select } from "antd";
import { useTranslation } from "react-i18next";
import i18next from "../../i18n/i18n";

let lng = ""; // Ngôn ngữ mặc định
if (typeof window !== "undefined") {
  lng = localStorage.getItem("i18nextLng") || "vi"; // Lấy ngôn ngữ từ localStorage
}

await i18next.changeLanguage(lng); // Thay đổi ngôn ngữ trong i18next
const t = i18next.getFixedT(lng);
console.log(lng, "ngôn ngữ của astro");
