---
import i18next from "i18next";
import PageHeading from "../components/global/PageHeading.astro";
import BannerImage from "../components/home/BannerImage";
import i18n from "../i18n";
import Layout from "../layouts/Layout.astro";

const cookies = Astro.cookies;
const lng = cookies.get("i18next")?.value || "vi";

await i18next.changeLanguage(lng);
const t = i18next.getFixedT(lng);
---

<Layout>
  <div class="relative">
    <BannerImage client:visible />

    <div
      class="absolute -bottom-20 left-0 right-0 z-10 flex items-center justify-center"
    >
      <!-- <SearchForm client:load/> -->
    </div>
  </div>

  <span>{t("about")}</span>

  <!-- Ưu đãi cho bạn -->
  <div class="lg:max-w-6xl mx-auto mt-28">
    <PageHeading title={i18n.t("welcome")} />
  </div>
</Layout>
